<Window x:Class="EmailToastUI.ConnectAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect Email Account" Height="370" Width="460"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#121316">
    <Border Margin="14" Background="#1A1C20" BorderBrush="#2C3038" BorderThickness="1" CornerRadius="10" Padding="18">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleText" Text="Connect Provider" Foreground="White" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,6"/>
            <TextBlock x:Name="HelpText" Grid.Row="1" Text="Sign in with OAuth for this account." Foreground="#99A0AA" TextWrapping="Wrap" Margin="0,0,0,18"/>

            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <Button x:Name="OAuthSignInButton" Content="Sign in with OAuth" Height="34" Click="OAuthSignInButton_Click" Visibility="Collapsed"/>
                <Button x:Name="OAuthSetupButton" Content="Get OAuth Client ID Setup" Height="30" Margin="0,8,0,0" Click="OAuthSetupButton_Click" Visibility="Collapsed"/>
                <TextBlock x:Name="OAuthStatusText" Foreground="#77C890" Margin="0,6,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
            </StackPanel>

            <TextBlock x:Name="SignedInText" Grid.Row="3" Foreground="#CDD2DA" Margin="0,0,0,8" TextWrapping="Wrap" Visibility="Collapsed"/>
            <TextBlock x:Name="OAuthHintText" Grid.Row="4" Text="Complete OAuth sign-in, then click Connect." Foreground="#8E95A1" Margin="0,0,0,0" TextWrapping="Wrap" Visibility="Collapsed"/>

            <Grid Grid.Row="5" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Cancel" Width="112" Height="36" Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button Grid.Column="2" Content="Connect" Width="112" Height="36" Click="Connect_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
